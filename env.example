# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
DATABASE_URL=sqlite:///./notes.db

# Application Settings
DEBUG=True
HOST=0.0.0.0
PORT=8000

# OCR Settings
TESSERACT_PATH=/usr/local/bin/tesseract
OCR_LANGUAGE=eng

# AI Settings
AI_MODEL=gpt-4o
MAX_TOKENS=1000
TEMPERATURE=0.7

# GPT-4o Vision Prompt Template Settings
# Option 1: Set prompt template directly in environment variable (use \n for newlines)
# GPT4V_PROMPT_TEMPLATE=You are an expert at reading handwritten text. Extract ALL text from this handwritten note image.\nTranscribe everything exactly as written, word-for-word.

# Option 2: Load prompt template from a file
# GPT4V_PROMPT_TEMPLATE_FILE=./prompt_templates/default.txt

# Microsoft Graph API Configuration
MICROSOFT_CLIENT_ID=your_client_id_here
MICROSOFT_CLIENT_SECRET=your_client_secret_here
MICROSOFT_TENANT_ID=common
MICROSOFT_REDIRECT_URI=http://localhost:8000/api/auth/callback


